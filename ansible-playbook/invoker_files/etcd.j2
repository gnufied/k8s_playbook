[Unit]
Description=Etcd service
After=network.target
Documentation=man:etd(1)

[Service]
ExecStart=/usr/bin/etcd --name=default --data-dir=/var/lib/etcd/default.etcd --listen-client-urls=http://0.0.0.0:4001 --listen-peer-urls=http://localhost:2380 --advertise-client-urls=http://0.0.0.0:4001
Restart=on-success

[Install]
WantedBy=multi-user.target
